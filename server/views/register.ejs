<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register</title>
    <link rel="stylesheet" href="/stylesheets/register.css" />
  </head>
  <body>
    <div class="logo-container">
      <img src="/images/readyToEat.jpg" alt="ReadyToEat Logo" class="logo" />
    </div>

    <!-- Registration Container -->
    <div class="registration-container">
      <div class="registration-wrapper">
        <!-- User Type Selection -->
        <div id="user-type-selection" class="user-type-selection">
          <button
            class="user-type-button restaurant-button"
            onclick="selectUserType('restaurant')"
          >
            <img
              src="/images/chef.png"
              alt="Restaurant"
              class="user-type-icon"
            />
            <span class="user-type-label">Register as Restaurant</span>
          </button>
          <button
            class="user-type-button customer-button"
            onclick="selectUserType('customer')"
          >
            <img src="/images/eat.png" alt="Customer" class="user-type-icon" />
            <span class="user-type-label">Register as Customer</span>
          </button>
        </div>

        <!-- Restaurant Registration Form -->
        <form
          id="restaurant-form"
          class="registration-form restaurant-form hidden"
          action="/register"
          method="POST"
          enctype="multipart/form-data"
        >
          <input type="hidden" name="role" value="restaurant" />
          <!-- Progress Bar -->
          <div class="progress-bar">
            <div class="progress-step">
              <div class="step-indicator" id="step-1-indicator">1</div>
              <span class="step-label">Owner Details</span>
            </div>
            <div class="progress-divider"></div>
            <div class="progress-step">
              <div class="step-indicator" id="step-2-indicator">2</div>
              <span class="step-label">Restaurant Info</span>
            </div>
          </div>

          <!-- Step 1: Owner Details -->
          <div id="step-1" class="form-step">
            <div class="form-row">
              <div class="form-group">
                <label class="form-label">First Name*</label>
                <input
                  type="text"
                  class="form-input"
                  name="firstName"
                  placeholder="Enter first name"
                />
              </div>
              <div class="form-group">
                <label class="form-label">Last Name*</label>
                <input
                  type="text"
                  class="form-input"
                  name="lastName"
                  placeholder="Enter last name"
                />
              </div>
            </div>
            <div class="form-group">
              <label class="form-label">Email*</label>
              <input
                type="email"
                class="form-input"
                name="email"
                placeholder="Enter email address"
              />
            </div>
            <div class="form-group">
              <label class="form-label">Restaurant NIF*</label>
              <input
                type="text"
                class="form-input"
                name="nif"
                placeholder="512345678"
              />
            </div>
            <div class="form-group">
              <label class="form-label">Password*</label>
              <input
                type="password"
                class="form-input"
                name="password"
                placeholder="Enter password"
              />
            </div>
            <div class="form-actions">
              <button type="button" class="back-button" onclick="goBackToUserType()">
                Back
              </button>
              <button type="button" class="next-button" onclick="nextStep()">
                Next Step
              </button>
            </div>
          </div>

          <!-- Step 2: Restaurant Info -->
          <div id="step-2" class="form-step hidden">
            <div class="form-group">
              <label class="form-label">Restaurant Name*</label>
              <input
                type="text"
                class="form-input"
                name="restaurantName"
                placeholder="Enter restaurant name"
              />
            </div>
            <div class="form-group">
              <label class="form-label">Address*</label>
              <input
                type="text"
                class="form-input"
                name="address"
                placeholder="Enter restaurant address"
              />
            </div>
            <div class="form-group">
              <label class="form-label">Phone*</label>
              <input
                type="text"
                class="form-input"
                name="phone"
                placeholder="912345678"
              />
            </div>
            <div class="form-group">
              <label class="form-label">Delivery Distance (km)*</label>
              <input
              type="number"
              class="form-input"
              name="deliveryDistance"
              placeholder="e.g. 10"
              min="1"
              required
              />
            </div>
            <div class="form-group">
              <label for="price-slider" class="form-label"
                >Price per Person*</label
              >
              <input
                id="price-slider"
                type="range"
                min="5"
                max="500"
                step="1"
                value="50"
                oninput="updatePriceDisplay(this.value)"
                class="slider-input"
                name="pricePerPerson"
              />
              <p id="price-display">Selected Price: â‚¬50</p>
            </div>
            <div class="form-group">
              <label class="form-label">Restaurant Image*</label>
              <input
                type="file"
                class="form-input"
                name="image"
                accept="image/*"
              />
            <div class="form-actions">
              <button class="back-button" onclick="previousStep()">
                Previous Step
              </button>
              <button type="submit" class="next-button">Submit</button>
            </div>
          </div>
        </form>

        <!-- Customer Details -->
        <form
          id="customer-form"
          class="registration-form customer-form hidden"
          action="/register"
          method="POST"
        >
          <input type="hidden" name="role" value="customer" />
          <div class="form-group">
            <label class="form-label">First Name*</label>
            <input
              type="text"
              class="form-input"
              name="firstName"
              placeholder="Enter first name"
              required
            />
          </div>
          <div class="form-group">
            <label class="form-label">Last Name*</label>
            <input
              type="text"
              class="form-input"
              name="lastName"
              placeholder="Enter last name"
              required
            />
          </div>
          <div class="form-group">
            <label class="form-label">Email*</label>
            <input
              type="email"
              class="form-input"
              name="email"
              placeholder="Enter email address"
              required
            />
          </div>
          <div class="form-group">
            <label class="form-label">NIF*</label>
            <input
              type="text"
              class="form-input"
              name="nif"
              placeholder="212345678"
              required
            />
          </div>

          <div class="form-group">
            <label class="form-label">Password*</label>
            <input
              type="password"
              class="form-input"
              name="password"
              placeholder="Enter password"
              required
            />
          </div>
          <div class="form-actions">
            <button type="button" class="back-button" onclick="goBackToUserType()">
              Back
            </button>
            <button type="submit" class="next-button">Submit</button>
          </div>
        </form>
      </div>
      
      <!-- Sign-in Link -->
      <p style="text-align: center; margin-top: 15px">
        Already have an account? <a href="/login">Sign in</a>
      </p>
    </div>
    <script src="/javascripts/register.js" defer></script>
    <div class="error-message">
      <% if (typeof errorMessage !== "undefined") { %>
        <p style="color: red;"><%= errorMessage %></p>
      <% } %>
    </div>
  </body>
</html>
