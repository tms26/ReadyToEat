<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register as Restaurant</title>
    <link rel="stylesheet" href="/stylesheets/register.css" />
  </head>
  <body>
    <div class="logo-container">
      <img src="/images/readyToEat.jpg" alt="ReadyToEat Logo" class="logo" />
    </div>

    <% if (typeof error !== 'undefined' && error) { %>
    <div
      class="toast-container position-fixed top-0 end-0 p-3"
      style="z-index: 9999"
    >
      <div
        id="errorToast"
        class="toast align-items-center text-bg-danger border-0"
        role="alert"
        aria-live="assertive"
        aria-atomic="true"
      >
        <div class="d-flex">
          <div class="toast-body"><%= error %></div>
        </div>
      </div>
    </div>
    <% } %>

    <div class="registration-container">
      <div class="registration-wrapper">
        <form
          id="restaurant-form"
          class="registration-form restaurant-form"
          action="/admin/addNewRestaurant"
          method="POST"
          enctype="multipart/form-data"
        >
          <input type="hidden" name="role" value="restaurant" />

          <!-- Progress Bar -->
          <div class="progress-bar">
            <div class="progress-step">
              <div class="step-indicator" id="step-1-indicator">1</div>
              <span class="step-label">Owner Details</span>
            </div>
            <div class="progress-divider"></div>
            <div class="progress-step">
              <div class="step-indicator" id="step-2-indicator">2</div>
              <span class="step-label">Restaurant Info</span>
            </div>
          </div>

          <!-- Step 1: Owner Details -->
          <div id="step-1" class="form-step">
            <div class="form-row">
              <div class="form-group">
                <label class="form-label">First Name*</label>
                <input
                  type="text"
                  class="form-input"
                  name="firstName"
                  placeholder="Enter first name"
                  required
                />
              </div>
              <div class="form-group">
                <label class="form-label">Last Name*</label>
                <input
                  type="text"
                  class="form-input"
                  name="lastName"
                  placeholder="Enter last name"
                  required
                />
              </div>
            </div>
            <div class="form-group">
              <label class="form-label">Email*</label>
              <input
                type="email"
                class="form-input"
                name="email"
                placeholder="Enter email address"
                required
              />
            </div>
            <div class="form-group">
              <label class="form-label">NIF</label>
              <input
                type="text"
                class="form-input"
                name="nif"
                placeholder="512345678"
                required
              />
            </div>
            <div class="form-group">
              <label class="form-label">Password*</label>
              <input
                type="password"
                class="form-input"
                name="password"
                placeholder="Enter password"
                required
              />
            </div>
            <div class="form-actions">
              <button type="button" class="next-button" onclick="nextStep()">
                Next Step
              </button>
            </div>
          </div>

          <!-- Step 2: Restaurant Info -->
          <div id="step-2" class="form-step hidden">
            <div class="form-group">
              <label class="form-label">Restaurant Name*</label>
              <input
                type="text"
                class="form-input"
                name="restaurantName"
                placeholder="Enter restaurant name"
                required
              />
            </div>
            <div class="form-group">
              <label class="form-label">Address*</label>
              <input
                type="text"
                class="form-input"
                name="address"
                placeholder="Enter restaurant address"
                required
              />
            </div>
            <div class="form-group">
              <label class="form-label">Phone*</label>
              <input
                type="text"
                class="form-input"
                name="phone"
                placeholder="912345678"
                required
              />
            </div>
            <div class="form-group">
              <label class="form-label">Delivery Distance (km)*</label>
              <input
                type="number"
                class="form-input"
                name="deliveryDistance"
                placeholder="e.g. 10"
                min="1"
                required
              />
            </div>
            <div class="form-group">
              <label for="price-slider" class="form-label"
                >Price per Person*</label
              >
              <input
                id="price-slider"
                type="range"
                min="5"
                max="500"
                step="1"
                value="50"
                oninput="updatePriceDisplay(this.value)"
                class="slider-input"
                name="pricePerPerson"
              />
              <p id="price-display">Selected Price: â‚¬50</p>
            </div>
            <div class="form-group">
              <label class="form-label">Restaurant Image*</label>
              <input
                type="file"
                class="form-input"
                name="image"
                accept="image/*"
                required
              />
            </div>
            <div class="form-actions">
              <button class="back-button" onclick="previousStep()">
                Previous Step
              </button>
              <button type="submit" class="next-button">Submit</button>
            </div>
          </div>
        </form>
      </div>
    </div>
    <div class="back-button-container1">
      <button class="back-button1" onclick="window.location.href='/admin'">
        Back
      </button>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      window.addEventListener('DOMContentLoaded', function () {
        var toastEl = document.getElementById('errorToast');
        if (toastEl) {
          var toast = new bootstrap.Toast(toastEl, { delay: 4000 });
          toast.show();
        }
      });
    </script>
    <script src="/javascripts/register.js" defer></script>
  </body>
</html>
