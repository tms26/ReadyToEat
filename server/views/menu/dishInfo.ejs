<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dish Details</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/stylesheets/menu/dishes.css" />
    <link rel="stylesheet" href="/stylesheets/partials/navbar.css" />
  </head>
  <body>
    <%- include('../partials/navbar', { user: user }) %>

    <!-- Dish Details Container -->
    <div class="container bootstrap snippets bootdey">
      <div class="panel-body inf-content">
        <div class="row">
          <div class="col-md-4">
            <img
              alt="<%= prato.nome %>"
              class="img-dish img-thumbnail isTooltip"
              src="<%= prato.imagem %>"
              data-original-title="<%= prato.nome %>"
            />
          </div>

          <!-- Dish Information -->
          <div class="col-md-6 dish-details">
            <div class="table-responsive">
              <table class="table table-user-information">
                <tbody>
                  <tr>
                    <td>
                      <strong>
                        <span
                          class="glyphicon glyphicon-asterisk text-primary"
                        ></span>
                        Name
                      </strong>
                    </td>
                    <td class="text-primary"><%= prato.nome %></td>
                  </tr>
                  <tr>
                    <td>
                      <strong>
                        <span
                          class="glyphicon glyphicon-asterisk text-primary"
                        ></span>
                        Category
                      </strong>
                    </td>
                    <td class="text-primary"><%= prato.categoria %></td>
                  </tr>
                  <tr>
                    <td>
                      <strong>
                        <span
                          class="glyphicon glyphicon-user text-primary"
                        ></span>
                        Description
                      </strong>
                    </td>
                    <td class="text-primary"><%= prato.descricao %></td>
                  </tr>
                  <tr>
                    <td>
                      <strong>
                        <span
                          class="glyphicon glyphicon-cloud text-primary"
                        ></span>
                        Price
                      </strong>
                    </td>
                    <td class="text-primary"><%= prato.preco %> â‚¬</td>
                  </tr>

                  <tr>
                    <td>
                      <strong>
                        <span
                          class="glyphicon glyphicon-bookmark text-primary"
                        ></span>
                        Preparation Time
                      </strong>
                    </td>
                    <td class="text-primary">
                      <%= prato.tempoPreparo %> minutes
                    </td>
                  </tr>
                  <tr>
                    <td>
                      <strong>
                        <span
                          class="glyphicon glyphicon-eye-open text-primary"
                        ></span>
                        Portion Size
                      </strong>
                    </td>
                    <td class="text-primary"><%= prato.tamanhoPorcao %></td>
                  </tr>
                  <tr>
                    <td>
                      <strong>
                        <span
                          class="glyphicon glyphicon-envelope text-primary"
                        ></span>
                        Calories
                      </strong>
                    </td>
                    <td class="text-primary">
                      <%= prato.informacaoNutricional.calorias %>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      <strong>
                        <span
                          class="glyphicon glyphicon-envelope text-primary"
                        ></span>
                        Proteinas
                      </strong>
                    </td>
                    <td class="text-primary">
                      <%= prato.informacaoNutricional.proteinas %>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      <strong>
                        <span
                          class="glyphicon glyphicon-envelope text-primary"
                        ></span>
                        Carbs
                      </strong>
                    </td>
                    <td class="text-primary">
                      <%= prato.informacaoNutricional.carboidratos %>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      <strong>
                        <span
                          class="glyphicon glyphicon-envelope text-primary"
                        ></span>
                        Fat
                      </strong>
                    </td>
                    <td class="text-primary">
                      <%= prato.informacaoNutricional.gorduras %>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
    <a href="javascript:history.back()" class="btn-back1">Back</a>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <% if (user.role === "restaurant") { %>
      <script>
        var restauranteId = "<%= user._id %>";
      </script>
      <script src="/socket.io/socket.io.js"></script>
      <script src="/javascripts/restaurantOrderNotification.js"></script>
    <% } %>
  </body>
</html>
